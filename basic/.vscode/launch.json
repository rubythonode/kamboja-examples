    "version": "0.2.0",
    "configurations": [
        {
            "name": "Mocha",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            //"stopOnEntry": true,
            "args": [
                "--no-timeouts",
                "--recursive",
                "--colors"
            ], 
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "testing"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch",
            "program": "${workspaceRoot}/app/index.js",
            "cwd": "${workspaceRoot}",
            "outFiles": []
        }
    ]
}